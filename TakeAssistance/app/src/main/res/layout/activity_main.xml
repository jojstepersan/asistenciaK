<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.konradlorenz.takeassistance.activities.MainActivity">

<fragment
    android:layout_width="match_parent"
    android:id="@+id/fragmento_activity_main"
    android:layout_height="wrap_content"
    tools:layout="@layout/fragment_list_classes"
    android:name="co.edu.konradlorenz.takeassistance.fragments.ListClassesFragment">

</fragment>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
