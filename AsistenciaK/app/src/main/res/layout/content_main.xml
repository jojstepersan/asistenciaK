<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jojstepersan.asistenciak.MainActivity"
tools:showIn="@layout/activity_main">


    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:id="@+id/cardView">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_calculo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/textureView1"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="110dp"
            android:text=" Calculo integral\n Gr. 51  Stu:30 "
            android:fontFamily="@string/app_name"
            android:textSize="36dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cardView2" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_calculo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/textureView2"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="110dp"
            android:text=" Calculo diferencial\n Gr. 1  Stu:20 "
            android:fontFamily="@string/app_name"
            android:textSize="31dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cardView3">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_calculo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/textureView3"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="110dp"
            android:text=" Fundamento de matematicas\n Gr. 1  Stu:30 "
            android:fontFamily="@string/app_name"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/cardView4"
        android:layout_below="@+id/cardView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_calculo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/textureView4"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:background="@color/white"
            android:fontFamily="@string/app_name"
            android:text=" Calculo integral\n Gr. 51  Stu:30 "
            android:textSize="36dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cardView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_calculo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/textureView5"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="110dp"
            android:text=" Calculo integral\n Gr. 51  Stu:30 "
            android:fontFamily="@string/app_name"
            android:textSize="36dp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
