<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jojstepersan.asistenciak.MainActivity"
tools:showIn="@layout/activity_main"
android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"

        android:id="@+id/cardView">

        <ImageView
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_materia"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textureView1"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="120dp"
            android:fontFamily="@string/app_name"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/almost_white"
            android:text="Fundamento de matematicas\n Gr. 1   "
            android:textSize="20dp"
            android:textAlignment="center"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cardView2" >

        <ImageView
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_user"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textureView2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="120dp"
            android:background="@color/white"
            android:fontFamily="@string/app_name"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Ecuaciones diferenciales\n Gr. 1  "
            android:textSize="20dp"
            android:backgroundTint="@color/almost_white"
            android:textAlignment="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cardView3">
        <ImageView
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_materia"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textureView3"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="120dp"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@string/app_name"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Calculo diferencial\n Gr. 1   "
            android:textSize="20dp"
            android:backgroundTint="@color/almost_white"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/cardView4"
        android:layout_below="@+id/cardView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_action_name"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textureView4"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="120dp"
            android:background="@color/white"
            android:fontFamily="@string/app_name"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Calculo integral\n Gr. 1   "
            android:textSize="20dp"
            android:backgroundTint="@color/almost_white"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/cardView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_calculo"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textureView5"
            android:layout_width="250dp"
            android:layout_height="68dp"
            android:layout_marginLeft="120dp"
            android:background="@color/white"
            android:fontFamily="@string/app_name"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="calculo multivariado\n Gr. 51   "
            android:textSize="20dp"
            android:backgroundTint="@color/almost_white"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
